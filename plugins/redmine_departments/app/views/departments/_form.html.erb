<%= form_for @department do |f| %>
  <%= error_messages_for 'department' %>
  <h3><%= l(:department_information) %></h3>
  <table>
    <tbody>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_codigo) %>:</td>
        <td><%= f.text_field :codigo, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_nombre) %>:</td>
        <td><%= f.text_field :nombre, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_direccion) %>:</td>
        <td><%= f.text_field :direccion, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_direccion2) %>:</td>
        <td><%= f.text_field :direccion2, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_codigo_postal) %>:</td>
        <td><%= f.text_field :codigo_postal, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_localidad) %>:</td>
        <td><%= f.text_field :localidad, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_territorio) %>:</td>
        <td><%= f.text_field :territorio, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_telefono) %>:</td>
        <td><%= f.text_field :telefono, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_fax) %>:</td>
        <td><%= f.text_field :fax, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_direccionip) %>:</td>
        <td><%= f.text_field :direccionip, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_email_oficina) %>:</td>
        <td><%= f.text_field :email_oficina, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_telefono_vigilante) %>:</td>
        <td><%= f.text_field :telefono_vigilante, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_responsable) %>:</td>
        <td><%= select_tag "department[responsable_id]", options_for_select(@members.collect{ |u| [u.name, u.id] }, selected: @department.responsable_id ), :include_blank => true %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_coordinador) %>:</td>
        <td><%= select_tag "department[coordinador_id]", options_for_select(@members.collect{ |u| [u.name, u.id] }, selected: @department.coordinador_id ), :include_blank => true %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_responsable_sepe) %>:</td>
        <td><%= f.text_field :responsable_sepe, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_telefono_responsable_sepe) %>:</td>
        <td><%= f.text_field :telefono_responsable_sepe, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_email_responsable_sepe) %>:</td>
        <td><%= f.text_field :email_responsable_sepe, :size => 40 %></td>
      </tr>
      <tr>
        <td style="text-align:right;"><%= f.label l(:field_anotaciones) %>:</td>
        <td><%= f.text_area :anotaciones, size: "100x10" %></td>
      </tr>
    </tbody>
  </table>
  <hr />
  <h3><%= l(:label_attachment_plural) %></h3>
  <div id="departments-attachments-form">
    <%= render :partial => 'departments/attachments/form' %>
  </div>
  <p>
    <%= f.submit "#{f.object.new_record? ? l(:link_create_office) : l(:link_save_office)}" %> <%= f.object.new_record? ? link_to(l(:link_cancel), departments_path) : link_to(l(:link_cancel), department_path, :id => @department)  %>
  </p>
<%- end %>
