<table class="list">
  <thead style="text-align:center;">
    <tr>
      <th><%= l('field_nombre') %></th>
      <th><%= l('field_codigo') %></th>
      <th><%= l('field_members') %></th>
      <th><%= l('field_issues') %></th>
			<% if authorize_for_with_global(:departments, :delete, true) %>
      <th><%= l('field_remove') %></th>
				<% end %>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr class="<%= cycle("odd", "even") %>">
				<td><%= link_to(department.nombre, department, :id => department) %></td>
				<td><%= department.codigo %></td>
				<td><%= department.users.count %></td>
				<td><%= department.issues.count %></td>
				<% if authorize_for_with_global(:departments, :delete, true) %>
        <td style="border: 0; padding: 0;">
          <%= link_to(image_tag('delete.png'), department_path(department,:per_page => params[:per_page], :page => params[:page]), :confirm => l('confirm'), :method => :delete) %>
        </td>
				<% end %>
      </tr>
    <%- end %>
  </tbody>
</table>
