<table class="list">
	<thead style="text-align:center;">
		<tr>
		  <th><%= l('field_issues_id') %></th>
		  <th><%= l('field_issues_subject') %></th>
		  <th><%= l('field_issues_status') %></th>
      <% if authorize_for_with_global :positions, :removeissue, true %>
		    <th><%= l('field_issues_remove') %></th>
      <% end %>
		</tr>
	</thead>
  <tbody>
    <%- @position.issues.each do |issue| %>
    <tr>
      <td>#<%= issue.id %></td>
      <td><%=link_to( issue.subject, :controller => 'issues', :action => 'show', :id => issue ) %></td>
      <td><%= IssueStatus.find(issue.status_id).name %></td>
      <% if authorize_for_with_global :positions, :removeissue, true %>
      <td>
        <%= delete_link position_remove_issue_path(position, issue), :remote => true %>
      </td>
      <% end %>
    </tr>
    <%- end %>
  </tbody>
</table>
