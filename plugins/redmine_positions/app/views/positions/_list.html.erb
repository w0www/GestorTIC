<table class="list">
  <thead style="text-align:center;">
    <tr>
      <th><%= l('field_nombre') %></th>
      <th><%= l('field_codigo') %></th>
      <th><%= l('field_members') %></th>
      <th><%= l('field_issues') %></th>
			<% if authorize_for_with_global(:positions, :delete, true) %>
      <th><%= l('field_remove') %></th>
				<% end %>
    </tr>
  </thead>
  <tbody>
    <% @positions.each do |position| %>
      <tr class="<%= cycle("odd", "even") %>">
				<td><%= link_to(position.nombre, position, :id => position) %></td>
				<td><%= position.codigo %></td>
				<td><%= position.users.count %></td>
				<td><%= position.issues.count %></td>
				<% if authorize_for_with_global(:positions, :delete, true) %>
        <td style="border: 0; padding: 0;">
          <%= link_to(image_tag('delete.png'), position_path(position,:per_page => params[:per_page], :page => params[:page]), :confirm => l('confirm'), :method => :delete) %>
        </td>
				<% end %>
      </tr>
    <%- end %>
  </tbody>
</table>
